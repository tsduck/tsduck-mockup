<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- Must be included in .vcxproj files to use the RIST library -->

  <!-- Previous versions of librist installers had no Arm64 libraries -->
  <ImportGroup Label="PropertySheets" Condition="'$(LIBRIST)' != '' AND ('$(Platform)' != 'ARM64' OR Exists('$(LIBRIST)\lib\Release-ARM64'))">
    <Import Project="$(LIBRIST)\librist-static.props"/>
  </ImportGroup>

  <ImportGroup Label="PropertySheets" Condition="'$(LIBRIST)' == '' OR ('$(Platform)' == 'ARM64' AND !Exists('$(LIBRIST)\lib\Release-ARM64'))">
    <Import Project="msvc-disable-rist.props"/>
  </ImportGroup>

</Project>
